<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
<!-- 	<bean id="tv" class="polymorphism.SamsungTV"></bean> -->
	<!--  import를 이용해서 여러bean파일을 나누어 사용함으로써 여러개를 하나로 합치는것도 가능하다.  -->
<!-- 	특수기호가 포함된 아이디를 bean id로 지정시에는 name를 사용한다.  -->
<!-- 	bean 엘리먼트 의 attribute. -->
<!-- 	init-method -->
<!-- 	생성되는 메소드를 재정의하여 멤버변수를 초기화 -->
<!-- 	scope속성 -->
<!-- 	중복되는 객체를 하나만 만들것이냐 아니면 중복되는말든 똑같은 객체를 여러개 만들어서 사용할것인가. -->
	
	<bean id="tv" class="polymorphism.SamsungTV" init-method="initMethod" lazy-init="true">
		<constructor-arg ref="sony"></constructor-arg>
	</bean>
	<bean id="sony" class="polymorphism.SonySpeaker"></bean>


	
	
</beans> 